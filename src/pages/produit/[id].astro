---
import Layout from '../../layouts/Layout.astro';

const { id } = Astro.params;
---

<Layout title="Produit - TaVue">
  <div class="container mx-auto px-6 lg:px-12 py-12">
    <!-- Breadcrumb -->
    <div class="text-sm breadcrumbs mb-8">
      <ul>
        <li><a href="/">Accueil</a></li>
        <li><a href="/mes-lunettes">Mes lunettes</a></li>
        <li>Épure Classique</li>
      </ul>
    </div>

    <!-- Grille principale -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-20">
      <!-- Image du produit -->
      <div class="bg-base-200 rounded-3xl p-12 flex items-center justify-center min-h-[500px]">
        <img src="/lunettes.svg" alt="Lunettes" class="w-full max-w-lg h-auto" />
      </div>

      <!-- Informations du produit -->
      <div class="space-y-6">
        <div>
          <div class="badge badge-secondary mb-4">Personnalisé</div>
          <h1 class="text-4xl font-playfair font-bold text-primary mb-2">
            Épure Classique
          </h1>
          <p class="text-base-content/60">
            Créé le 15 janvier 2025
          </p>
        </div>

        <!-- Caractéristiques -->
        <div class="card bg-base-100 shadow-lg rounded-2xl p-6">
          <h3 class="text-lg font-semibold mb-4">Caractéristiques</h3>
          <div class="space-y-3 text-sm">
            <div class="flex justify-between">
              <span class="text-base-content/70">Matériau monture</span>
              <span class="font-semibold">Acétate</span>
            </div>
            <div class="divider my-1"></div>
            <div class="flex justify-between">
              <span class="text-base-content/70">Couleur monture</span>
              <span class="font-semibold">Noir</span>
            </div>
            <div class="divider my-1"></div>
            <div class="flex justify-between">
              <span class="text-base-content/70">Matériau branches</span>
              <span class="font-semibold">Bois de noyer</span>
            </div>
            <div class="divider my-1"></div>
            <div class="flex justify-between">
              <span class="text-base-content/70">Largeur du pont</span>
              <span class="font-semibold">18mm</span>
            </div>
            <div class="divider my-1"></div>
            <div class="flex justify-between">
              <span class="text-base-content/70">Taille des verres</span>
              <span class="font-semibold">52mm</span>
            </div>
          </div>
        </div>

        <!-- Prix -->
        <div class="card bg-primary text-primary-content shadow-lg rounded-2xl p-6">
          <div class="flex items-center justify-between mb-4">
            <span class="text-lg">Prix</span>
            <span class="text-3xl font-playfair font-bold">249€</span>
          </div>
          <p class="text-sm opacity-80">
            Livraison gratuite • Garantie 2 ans
          </p>
        </div>

        <!-- Actions -->
        <div class="flex flex-col sm:flex-row gap-4">
          <button class="btn btn-primary flex-1 rounded-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z" />
            </svg>
            Ajouter au panier
          </button>
          <a href={`/personnalisation?id=${id}`} class="btn btn-outline flex-1 rounded-lg">
            Modifier
          </a>
        </div>

        <button class="btn btn-ghost btn-sm w-full text-error">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
          Supprimer cette paire
        </button>
      </div>
    </div>

    <!-- Modèles similaires -->
    <section>
      <h2 class="text-3xl font-playfair font-bold text-primary mb-8">
        Modèles similaires
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Card 1 -->
        <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow rounded-2xl overflow-hidden">
          <figure class="bg-base-200 h-48 flex items-center justify-center p-6">
            <img src="/lunettes.svg" alt="Lunettes" class="h-full w-auto" />
          </figure>
          <div class="card-body p-6">
            <h3 class="card-title font-playfair text-primary">Moderne Doré</h3>
            <p class="text-sm text-base-content/70">
              Monture métal doré, branches acétate
            </p>
            <div class="card-actions justify-end mt-4">
              <a href="/produit/2" class="btn btn-sm btn-primary rounded-lg">
                Voir le modèle
              </a>
            </div>
          </div>
        </div>

        <!-- Card 2 -->
        <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow rounded-2xl overflow-hidden">
          <figure class="bg-base-200 h-48 flex items-center justify-center p-6">
            <img src="/lunettes.svg" alt="Lunettes" class="h-full w-auto" />
          </figure>
          <div class="card-body p-6">
            <h3 class="card-title font-playfair text-primary">Minimaliste Acier</h3>
            <p class="text-sm text-base-content/70">
              Monture titane argenté, ultra-léger
            </p>
            <div class="card-actions justify-end mt-4">
              <a href="/produit/3" class="btn btn-sm btn-primary rounded-lg">
                Voir le modèle
              </a>
            </div>
          </div>
        </div>

        <!-- Card 3 -->
        <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow rounded-2xl overflow-hidden">
          <figure class="bg-base-200 h-48 flex items-center justify-center p-6">
            <img src="/lunettes.svg" alt="Lunettes" class="h-full w-auto" />
          </figure>
          <div class="card-body p-6">
            <h3 class="card-title font-playfair text-primary">Vintage Écaille</h3>
            <p class="text-sm text-base-content/70">
              Monture écaille de tortue, style rétro
            </p>
            <div class="card-actions justify-end mt-4">
              <a href="/produit/4" class="btn btn-sm btn-primary rounded-lg">
                Voir le modèle
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>
