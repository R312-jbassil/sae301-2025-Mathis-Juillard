---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Panier - TaVue">
  <div class="bg-base-100 min-h-screen">
    <div class="max-w-[1400px] mx-auto px-12 py-16">
      
      <div class="mb-10">
        <h1 class="font-playfair text-5xl font-bold text-primary mb-2">
          Mon Panier
        </h1>
        <p class="font-manrope text-base text-base-content/60">
          Finalisez votre commande
        </p>
      </div>

      <div id="loading" class="flex justify-center items-center py-20">
        <div class="loading loading-spinner loading-lg text-primary"></div>
      </div>

      <div id="emptyState" class="hidden">
        <div class="flex flex-col items-center justify-center py-24">
          <div class="text-6xl mb-6">ðŸ›’</div>
          <h2 class="font-playfair text-3xl font-bold text-[#2C3E50] mb-4">
            Votre panier est vide
          </h2>
          <p class="text-gray-600 mb-8 text-center max-w-md font-manrope">
            Ajoutez des lunettes Ã  votre panier pour passer commande
          </p>
          <a href="/mes-lunettes" class="btn bg-[#2C3E50] hover:bg-[#2C3E50]/90 text-white border-0 h-12 rounded-lg font-manrope font-medium text-sm normal-case shadow-sm px-8">
            Voir mes crÃ©ations
          </a>
        </div>
      </div>

      <div id="cartContent" class="hidden">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          
          <div class="lg:col-span-2 space-y-4" id="cartItems">
          </div>

          <div class="lg:col-span-1">
            <div class="card bg-white shadow-xl sticky top-8 rounded-2xl">
              <div class="card-body p-8">
                <h2 class="font-playfair text-2xl font-bold text-[#2C3E50] mb-6">
                  RÃ©sumÃ©
                </h2>
                
                <div class="space-y-4 mb-6">
                  <div class="flex justify-between font-manrope">
                    <span class="text-gray-600">Sous-total (<span id="itemCount">0</span> articles)</span>
                    <span class="font-semibold" id="subtotal">0.00 â‚¬</span>
                  </div>
                  <div class="flex justify-between font-manrope">
                    <span class="text-gray-600">Livraison</span>
                    <span class="font-semibold" id="shipping">Gratuite</span>
                  </div>
                  <div class="divider my-2"></div>
                  <div class="flex justify-between font-manrope text-lg">
                    <span class="font-bold text-[#2C3E50]">Total</span>
                    <span class="font-bold text-[#2C3E50]" id="total">0.00 â‚¬</span>
                  </div>
                </div>

                <button id="validateBtn" class="btn bg-[#2C3E50] hover:bg-[#2C3E50]/90 text-white border-0 w-full h-12 rounded-lg font-manrope font-medium text-sm normal-case shadow-sm mb-3">
                  Valider la commande
                </button>

                <button id="clearBtn" class="btn bg-transparent text-red-500 border border-red-500 hover:bg-red-500 hover:text-white w-full h-12 rounded-lg font-manrope font-medium text-sm normal-case">
                  Vider le panier
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</Layout>

<script>
  import {  
    getCartItems, 
    updateCartItemQuantity, 
    removeFromCart, 
    clearCart,
    validateOrder,
    getCurrentUser,
    isAuthenticated 
  } from '../lib/pocketbase';

  let cartItems: any[] = [];

  function formatPrice(price: number) {
    return price.toFixed(2);
  }

  function createCartItemCard(item: any) {
    const glasses = item.expand?.lunette;
    if (!glasses) return null;

    const card = document.createElement('div');
    card.className = 'card bg-white shadow-lg rounded-2xl';
    card.setAttribute('data-line-id', item.id);
    
    const totalPrice = item.quantite * item.prix_unitaire;
    
    card.innerHTML = `
      <div class="card-body p-6">
        <div class="flex gap-6">
          <div class="flex-shrink-0 w-32 h-32 bg-[#F5F5F5] rounded-xl flex items-center justify-center p-4">
            ${glasses.svg_code || '<img src="/lunettes.svg" alt="Lunettes" class="w-full h-auto" />'}
          </div>
          <div class="flex-1">
            <div class="flex justify-between items-start mb-3">
              <div>
                <h3 class="font-playfair text-xl font-semibold text-[#2C3E50]">
                  ${glasses.nom_modele || 'Sans nom'}
                </h3>
                <p class="text-sm text-gray-600 mt-1 font-manrope">
                  ${glasses.materiau_monture_nom || 'AcÃ©tate'} - ${glasses.materiau_branches_nom || 'AcÃ©tate'}
                </p>
              </div>
              <button class="btn btn-ghost btn-sm btn-circle text-red-500 hover:bg-red-50" data-remove="${item.id}">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
              </button>
            </div>
            <div class="flex items-center justify-between mt-4">
              <div class="flex items-center gap-3">
                <button class="btn btn-sm btn-circle btn-outline" data-decrease="${item.id}">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd" />
                  </svg>
                </button>
                <span class="font-manrope font-semibold text-lg w-8 text-center" data-quantity="${item.id}">${item.quantite}</span>
                <button class="btn btn-sm btn-circle btn-outline" data-increase="${item.id}">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                  </svg>
                </button>
              </div>
              <div class="text-right">
                <p class="text-sm text-gray-500 font-manrope">${formatPrice(item.prix_unitaire)} â‚¬ / piÃ¨ce</p>
                <p class="font-playfair text-xl font-bold text-[#2C3E50]" data-item-total="${item.id}">${formatPrice(totalPrice)} â‚¬</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    `;

    return card;
  }

  function calculateTotal() {
    const subtotal = cartItems.reduce((sum, item) => sum + (item.quantite * item.prix_unitaire), 0);
    const itemCount = cartItems.reduce((sum, item) => sum + item.quantite, 0);
    
    const itemCountEl = document.getElementById('itemCount');
    const subtotalEl = document.getElementById('subtotal');
    const totalEl = document.getElementById('total');
    
    if (itemCountEl) itemCountEl.textContent = itemCount.toString();
    if (subtotalEl) subtotalEl.textContent = formatPrice(subtotal) + ' â‚¬';
    if (totalEl) totalEl.textContent = formatPrice(subtotal) + ' â‚¬';
  }

  function displayCart(items: any[]) {
    const loading = document.getElementById('loading');
    const emptyState = document.getElementById('emptyState');
    const cartContent = document.getElementById('cartContent');
    const cartItemsContainer = document.getElementById('cartItems');
    
    if (loading) loading.classList.add('hidden');
    
    if (!items || items.length === 0) {
      if (emptyState) emptyState.classList.remove('hidden');
      if (cartContent) cartContent.classList.add('hidden');
      return;
    }
    
    if (emptyState) emptyState.classList.add('hidden');
    if (cartContent) cartContent.classList.remove('hidden');
    
    if (cartItemsContainer) {
      cartItemsContainer.innerHTML = '';
      items.forEach(item => {
        const card = createCartItemCard(item);
        if (card) cartItemsContainer.appendChild(card);
      });
    }
    
    calculateTotal();
    attachEventListeners();
  }

  function showToast(message: string, type: 'success' | 'error' = 'success') {
    const toast = document.createElement('div');
    toast.className = 'toast toast-top toast-end z-50';
    const alertClass = type === 'success' ? 'alert-success' : 'alert-error';
    const icon = type === 'success' ? 'âœ“' : 'âœ—';
    toast.innerHTML = `<div class="alert ${alertClass} shadow-lg"><span>${icon} ${message}</span></div>`;
    document.body.appendChild(toast);
    setTimeout(() => toast.remove(), 3000);
  }

  async function loadCart() {
    if (!isAuthenticated()) {
      window.location.href = '/connexion';
      return;
    }

    const currentUser = getCurrentUser();
    if (!currentUser) return;

    const result = await getCartItems(currentUser.id);
    
    if (result.success && result.data) {
      cartItems = result.data;
      displayCart(cartItems);
    } else {
      displayCart([]);
    }
  }

  async function updateQuantity(lineId: string, newQuantity: number) {
    const result = await updateCartItemQuantity(lineId, newQuantity);
    
    if (result.success) {
      const item = cartItems.find(i => i.id === lineId);
      if (item) {
        if (newQuantity <= 0) {
          cartItems = cartItems.filter(i => i.id !== lineId);
          const card = document.querySelector(`[data-line-id="${lineId}"]`);
          if (card) card.remove();
        } else {
          item.quantite = newQuantity;
          const quantityEl = document.querySelector(`[data-quantity="${lineId}"]`);
          const itemTotalEl = document.querySelector(`[data-item-total="${lineId}"]`);
          if (quantityEl) quantityEl.textContent = newQuantity.toString();
          if (itemTotalEl) itemTotalEl.textContent = formatPrice(newQuantity * item.prix_unitaire) + ' â‚¬';
        }
        
        calculateTotal();
        
        if (cartItems.length === 0) {
          displayCart([]);
        }
      }
    } else {
      showToast('Erreur lors de la mise Ã  jour', 'error');
    }
  }

  function attachEventListeners() {
    document.querySelectorAll('[data-increase]').forEach(btn => {
      btn.addEventListener('click', () => {
        const lineId = btn.getAttribute('data-increase');
        if (!lineId) return;
        const item = cartItems.find(i => i.id === lineId);
        if (item) updateQuantity(lineId, item.quantite + 1);
      });
    });

    document.querySelectorAll('[data-decrease]').forEach(btn => {
      btn.addEventListener('click', () => {
        const lineId = btn.getAttribute('data-decrease');
        if (!lineId) return;
        const item = cartItems.find(i => i.id === lineId);
        if (item && item.quantite > 1) updateQuantity(lineId, item.quantite - 1);
      });
    });

    document.querySelectorAll('[data-remove]').forEach(btn => {
      btn.addEventListener('click', async () => {
        const lineId = btn.getAttribute('data-remove');
        if (!lineId) return;
        
        if (confirm('Retirer cet article du panier ?')) {
          const result = await removeFromCart(lineId);
          if (result.success) {
            cartItems = cartItems.filter(i => i.id !== lineId);
            const card = document.querySelector(`[data-line-id="${lineId}"]`);
            if (card) card.remove();
            
            calculateTotal();
            showToast('Article retirÃ©', 'success');
            
            if (cartItems.length === 0) {
              displayCart([]);
            }
          } else {
            showToast('Erreur lors de la suppression', 'error');
          }
        }
      });
    });
  }

  document.getElementById('clearBtn')?.addEventListener('click', async () => {
    if (!confirm('ÃŠtes-vous sÃ»r de vouloir vider votre panier ?')) return;
    
    const currentUser = getCurrentUser();
    if (!currentUser) return;

    const result = await clearCart(currentUser.id);
    if (result.success) {
      cartItems = [];
      displayCart([]);
      showToast('Panier vidÃ©', 'success');
    } else {
      showToast('Erreur', 'error');
    }
  });

  document.getElementById('validateBtn')?.addEventListener('click', async () => {
    if (cartItems.length === 0) {
      showToast('Votre panier est vide', 'error');
      return;
    }

    if (!confirm('Confirmer votre commande ?')) return;
    
    const currentUser = getCurrentUser();
    if (!currentUser) return;

    const result = await validateOrder(currentUser.id);
    if (result.success) {
      showToast('Commande validÃ©e avec succÃ¨s !', 'success');
      setTimeout(() => {
        window.location.href = '/mes-lunettes';
      }, 2000);
    } else {
      showToast('Erreur lors de la validation', 'error');
    }
  });

  window.addEventListener('load', loadCart);
</script>
